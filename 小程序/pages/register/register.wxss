/* pages/register/register.wxss */
.register-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form {
  flex: 1;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

input {
  width: 100%;
  height: 88rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.role-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.role-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.role-item text {
  margin-left: 8rpx;
  font-size: 28rpx;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  border-radius: 8rpx;
}

.login-link {
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #1890ff;
  margin-left: 10rpx;
} 