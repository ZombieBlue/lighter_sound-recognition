/* pages/index/index.wxss */
.event-card {
  width: 100%;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.controls {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.switch-label {
  margin-left: 10px;
  font-size: 28rpx;
  color: #606266;
}

.filter-group {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  gap: 20rpx;
}

.picker-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  min-width: 280rpx;
}

.picker-label {
  font-size: 26rpx;
  color: #606266;
  margin-right: 10rpx;
}

.picker {
  font-size: 26rpx;
  color: #409EFF;
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.table-container {
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.table-scroll-content {
  width: 100%;
  box-sizing: border-box;
}

.table-header {
  display: flex;
  background-color: #f5f7fa;
  font-weight: bold;
  padding: 8rpx 0;
  border-bottom: 1px solid #ebeef5;
  font-size: 24rpx;
}

.table-row {
  display: flex;
  padding: 8rpx 0;
  border-bottom: 1px solid #ebeef5;
  min-height: 50rpx;
}

.table-cell-xs {
  flex: 0.8;
  padding: 0 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 60rpx;
  font-size: 24rpx;
}

.table-cell-sm {
  flex: 1.5;
  padding: 0 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 80rpx;
  font-size: 24rpx;
}

/* 风险级别特殊单元格 */
.table-cell-sm:last-child {
  min-width: 100rpx;
  overflow: visible;
}

.table-cell-md {
  flex: 2;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 180rpx;
}

.table-cell-risk {
  flex: 1.5;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: visible;
  min-width: 120rpx;
}

.progress-container {
  width: 100%;
  height: 20rpx;
  background-color: #EBEEF5;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 14rpx;
  line-height: 20rpx;
  color: #fff;
}

.tag {
  display: inline-block;
  padding: 2rpx 6rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  white-space: nowrap;
  color: #fff;
  text-align: center;
  min-width: 60rpx;
  z-index: 10;
  overflow: visible;
  box-sizing: border-box;
}

.tag-danger {
  background-color: var(--danger-color);
}

.tag-warning {
  background-color: var(--warning-color);
}

.tag-success {
  background-color: var(--success-color);
}

.tag-info {
  background-color: var(--info-color);
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #909399;
}

.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

.pagination-info {
  color: #909399;
  font-size: 24rpx;
}

.pagination-pages {
  display: flex;
  align-items: center;
}

.pagination-btn {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  margin: 0 10rpx;
  border: 1px solid #d9ecff;
  background-color: #ecf5ff;
  color: #409EFF;
  border-radius: 4rpx;
  cursor: pointer;
}

.pagination-btn.disabled {
  color: #c0c4cc;
  background-color: #f4f4f5;
  border-color: #e9e9eb;
}

.pagination-current {
  font-size: 24rpx;
  color: #606266;
  margin: 0 20rpx;
}

.logout-container {
  padding: 20px;
  margin-top: 20px;
  display: flex;
  justify-content: center;
}

.logout-btn {
  background-color: #f56c6c;
  color: white;
  width: 90%;
  border-radius: 5px;
} 